@{ 
    const string AppName = "Панель показателей";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/css/chartist.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-logo h4" href="/">
                    <span class="glyphicon glyphicon-dashboard navbar-text"></span>
                </a>
                @Html.ActionLink(AppName, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/">default</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="body-content container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – @AppName</p>
        </footer>
    </div>

    <script src="~/lib/js/jquery-3.3.1.min.js"></script>
    <script src="~/lib/js/bootstrap.js"></script>
    <script src="~/lib/js/chartist.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>